{% extends 'base.html.twig' %}
{% block title %}Apprentissage de Symfony 4{% endblock %}
{% block body %}
    <div class="container">
        <h1>Welcom on this Blog</h1>
        <hr>
        <section class="articles">
            {% for article in articles %}
                <article>
                    <h2>{{ article.title }}</h2>
                    <div class="metadata">Écrit le {{ article.createdAt | date('d/m/y') }} à {{ article.createdAt | date('H:i') }} dans la catégorie Développement WEB</div>
                    <div>
                        <img src="{{ article.image }}" alt="Image de l'article n°{{ article.id }}">
                        
                        {{ article.content | raw}}

                        <a href="{{ path('blog_show_article', {'id': article.id}) }}" class="btn btn-primary">En savoir plus...</a>
                    </div>
                </article>
            {% endfor %}
        </section>
    </div>
{% endblock %}
